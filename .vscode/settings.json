{
  "editor.defaultColorDecorators": true,
  "json.schemas": [
    {
      "fileMatch": ["/pixel_update.json"],
      "schema": {
        "type": "array",
        "uniqueItems": true,
        "items": {
          "type": "object",
          "required": ["x", "y", "rgb"],
          "properties": {
            "x": {
              "description": "The x coordinate of the pixel you wish to update",
              "type": "string",
              "default": "0"
            },
            "y": {
              "description": "The y coordinate of the pixel you wish to update",
              "type": "string",
              "default": "0"
            },
            "rgb": {
              "description": "The colour of the pixel",
              "format": "color",
              "default": "#ffffff"
            }
          }
        }
      }
    }
  ]
}
